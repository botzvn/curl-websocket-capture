{
  "manifest_version": 3,
  "name": "cURL & WS Capture",
  "version": "0.0.1",
  "description": "Capture network requests and WebSocket connections.",
  "permissions": ["webRequest", "storage", "activeTab"],
  "optional_host_permissions": ["<all_urls>", "ws://*/*", "wss://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
